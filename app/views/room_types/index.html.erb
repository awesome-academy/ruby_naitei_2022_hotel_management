<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2><%= t ".our_rooms"%></h2>
          <div class="bt-option">
            <%= link_to t(".home"), root_path %>
            <span><%= t ".rooms" %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Rooms Section Begin -->
<section class="rooms-section spad">
  <div class="container">
    <div><i class="fa fa-filter"></i>Filter</div>
    <%= render "filter" %>
    <div class="row">
      <% if @room_types.any? %>
        <%= render @room_types %>
        <div class="col-lg-12">
          <div class="room-pagination">
            <%== pagy_bootstrap_nav @pagy %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- Rooms Section End -->
