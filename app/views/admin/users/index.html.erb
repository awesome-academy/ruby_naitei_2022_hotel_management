<div class="col-12">
  <h1>Danh sách người dùng</h1>
  <div class="card">
    <!-- /.card-header -->
    <div class="card-body">
      <p>Filters: <span class="filters"></span></p>
      <div class="btn-group btn-filter">
        <button type="button" class="btn btn-default dropdown-toggle">
          <span class="glyphicon glyphicon-filter"></span>
          <span class="sr-only">Filters</span>
        </button>
        <%= search_form_for(@search, url: admin_users_path, method: "get") do |f| %>
          <ul class="dropdown-menu dropdown-menu-filter">
            <li>
              <%= f.label :name_cont, "Name"%>
              <%= f.text_field :name_cont, class: "form-control date-input",
                                           value: params[:q]? params[:q][:name_cont] : "" %>
              <%= f.label :email_cont, "Email"%>
              <%= f.text_field :email_cont, class: "form-control date-input",
                                            value: params[:q]? params[:q][:email_cont] : "" %>
              <%= f.label :address_cont, "Address"%>
              <%= f.text_field :address_cont, class: "form-control date-input",
                                              value: params[:q]? params[:q][:address_cont] : "" %>
            </li>
            <%= f.submit 'Search', class: "btn btn-primary" %>
          </ul>
        <% end %>
      </div>
      <% if @users.any? %>
        <table  class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= sort_link @search, :name, t(".name") %></th>
              <th><%= t(".email") %></th>
              <th><%= t(".address") %></th>
              <th><%= t(".phone_number") %></th>
              <th><%= t(".status") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
      <% else %>
        <p>Không tìm thấy người dùng nào</p>
      <% end %>
    </div>
  </div>
</div>
</div>
<% if @users.any? %>
  <div class="col-lg-12 ">
    <div class="room-pagination">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
<% end %>
